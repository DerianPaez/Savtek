---
import { t } from 'i18next'
import Service from './Service.astro'

const serviceObject = t('services.content', { returnObjects: true })
const serviceList = Object.values(serviceObject)

const serviceListIcons = [
  '/icons/camera.svg',
  '/icons/structured-cabling.svg',
  '/icons/lightning.svg',
  '/icons/tv.svg',
  '/icons/audio.svg',
  '/icons/smart-home.svg',
  '/icons/access-control.svg'
]
---

<section id='services-id'>
  <div class='px-[4%] py-[50px] grid gap-8 lg:gap-14 items-center'>
    <h2 class='text-3xl font-bold lg:text-5xl text-white text-center'>
      {t('services.title')}
    </h2>
    <div class='grid gap-x-14 gap-y-8 sm:grid-cols-2 lg:grid-cols-3'>
      {
        serviceList.map((service, index) => {
          return (
            <Service
              icon={serviceListIcons[index]}
              title={service.title}
              paragraph={service.paragraph}
              buttonText={t('services.button')}
              link={service.link}
            />
          )
        })
      }
    </div>
  </div>
</section>

<script></script>
