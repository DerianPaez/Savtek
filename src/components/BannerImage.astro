---
const { src, alt, text } = Astro.props
---

<div class='swiper-slide'>
  <img
    class='block object-cover object-center w-full h-full'
    src={src}
    alt={alt}
  />
  <div
    class='absolute z-50 top-0 right-0 left-0 bottom-0 w-full h-full bg-black opacity-30'
  >
  </div>
  <div
    class='absolute z-50 top-0 grid h-full w-full justify-center items-center px-[80px] md:px-[150px]'
  >
    <h1
      class='text-white font-black text-center text-4xl lg:text-6xl lg:leading-[73px]'
    >
      {text}
    </h1>
  </div>
</div>
