---
import ServiceNabvar from './ServiceNabvar.astro'

const {
  id,
  principalImage,
  title,
  paragraph1,
  secondaryImage1,
  secondaryImage2,
  description
} = Astro.props
---

<article class='grid grid-cols-1 gap-10 max-w-5xl mx-auto'>
  <img
    class='object-cover object-center max-h-[500px] w-full'
    src={principalImage}
    alt={description && description}
  />
  <h2 class='text-3xl font-bold lg:text-5xl text-white'>
    {title}
  </h2>
  <p class='text-gray lg:text-xl leading-8'>{paragraph1}</p>
  <div class='grid gap-6 md:grid-cols-2'>
    <img src={secondaryImage1} alt={description && description} />
    <img src={secondaryImage2} alt={description && description} />
  </div>
</article>
