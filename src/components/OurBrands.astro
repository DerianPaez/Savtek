---
import { t } from 'i18next'
---

<section id='ourBrands-id' class='bg-[#0E1113]'>
  <div
    class='px-[4%] py-[50px] lg:py-[100px] grid gap-8 md:grid-cols-2 lg:grid-cols-6 place-items-center'
  >
    <div class='grid gap-4 col-span-2'>
      <h2
        class='text-3xl font-bold lg:text-5xl text-white text-center lg:text-left'
      >
        {t('ourbrands.content.title')}
      </h2>
      <p class='text-[#B5BCCB] leading-8 text-center lg:text-left'>
        {t('ourbrands.content.paragraph')}
      </p>
    </div>
    <img src='/images/our-brands-1.png' alt='' />
    <img src='/images/our-brands-2.png' alt='' />
    <img src='/images/our-brands-3.png' alt='' />
    <img src='/images/our-brands-4.png' alt='' />
  </div>
</section>
